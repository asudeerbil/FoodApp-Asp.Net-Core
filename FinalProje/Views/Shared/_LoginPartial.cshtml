@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <a href="/MyAccount/Index" class="nav-item nav-link">@User.Identity.Name</a>
    <a href="/Logout/Index" class="nav-item nav-link">Secure Logout</a>
    <a class="nav-item nav-link">&nbsp;&nbsp;</a>
    <a class="nav-item nav-link">&nbsp;&nbsp;</a>
}
else
{
    <a href="/Login/Index" class="nav-item nav-link">Login</a>
    <a href="/Register/Index" class="nav-item nav-link">Register</a>
    <a class="nav-item nav-link">&nbsp;&nbsp;</a>
    <a class="nav-item nav-link">&nbsp;&nbsp;</a>
}
