@model FinalProje.Models.Products
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_homeLayout.cshtml";
}

<!-- Shop Detail Start -->
<div class="container-fluid py-5">
    <div class="row px-xl-5">
        <div class="col-lg-5 pb-5">
            <div id="product-carousel" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner border">
                    <div class="carousel-item active">
                        <img class="w-100 h-100" src="/Urunler/@Model.ProductPicture" alt="Image">
                    </div>
                    <div class="carousel-item">
                        <img class="w-100 h-100" src="/Urunler/@Model.ProductPicture" alt="Image">
                    </div>
                    <div class="carousel-item">
                        <img class="w-100 h-100" src="/Urunler/@Model.ProductPicture" alt="Image">
                    </div>
                    <div class="carousel-item">
                        <img class="w-100 h-100" src="/Urunler/@Model.ProductPicture" alt="Image">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#product-carousel" data-slide="prev">
                    <i class="fa fa-2x fa-angle-left text-dark"></i>
                </a>
                <a class="carousel-control-next" href="#product-carousel" data-slide="next">
                    <i class="fa fa-2x fa-angle-right text-dark"></i>
                </a>
            </div>
        </div>

        <div class="col-lg-7 pb-5">
            <h3 class="font-weight-semi-bold">@Model.ProductName</h3>
            <div class="d-flex mb-3">
                <div class="text-primary mr-2">
                    <small class="fas fa-star"></small>
                    <small class="fas fa-star"></small>
                    <small class="fas fa-star"></small>
                    <small class="fas fa-star-half-alt"></small>
                    <small class="far fa-star"></small>
                </div>
                <small class="pt-1">(50 Reviews)</small>
            </div>
            <h3 class="font-weight-semi-bold mb-4">@Model.ProductPrice ₺</h3>
            <p class="mb-4">@Model.ProductDescription</p>
            <div class="d-flex mb-3">
                <p class="text-dark font-weight-medium mb-0 mr-3">Portion:</p>
                <form>
                    <div class="custom-control custom-radio custom-control-inline">
                        @Html.RadioButton("portion", "1", new { id = "portion-1", @class = "custom-control-input" })
                        <label class="custom-control-label" for="portion-1">1 Portion</label>
                    </div>
                    <div class="custom-control custom-radio custom-control-inline">
                        @Html.RadioButton("portion", "1.5", new { id = "portion-1.5", @class = "custom-control-input" })
                        <label class="custom-control-label" for="portion-1.5">1.5 Portions</label>
                    </div>
                    <div class="custom-control custom-radio custom-control-inline">
                        @Html.RadioButton("portion", "2", new { id = "portion-2", @class = "custom-control-input" })
                        <label class="custom-control-label" for="portion-2">2 Portions</label>
                    </div>
                </form>

            </div>

            <div class="d-flex align-items-center mb-4 pt-2">
                <div class="input-group quantity mr-3" style="width: 130px;">
                    <div class="input-group-btn">
                        <button class="btn btn-primary btn-minus">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                    <input type="text" class="form-control bg-secondary text-center" value="1">
                    <div class="input-group-btn">
                        <button class="btn btn-primary btn-plus">
                            <i class="fa fa-plus"></i>
                        </button>
                    </div>
                </div>
                <button class="btn btn-primary px-3">
                    <a href="/Cart/Index">
                        <i class="fa fa-shopping-cart mr-1"></i> View Cart List
                    </a>
                </button>
            </div>

        </div>
    </div>
    <div class="row px-xl-5">
        <div class="col">
            <div class="nav nav-tabs justify-content-center border-secondary mb-4">
                <a class="nav-item nav-link active" data-toggle="tab" href="#tab-pane-1">Description</a>

                <a class="nav-item nav-link" data-toggle="tab" href="#tab-pane-3">Food Reviews</a>
            </div>
            <div class="tab-content">
                <div class="tab-pane fade show active" id="tab-pane-1">
                    <h4 class="mb-3">Food Description</h4>
                    <p>@Model.ProductDescription</p>
                </div>

                <div class="tab-pane fade" id="tab-pane-3">
                    <div class="row">
                        <div class="col-md-6">
                            <h4 class="mb-4">Food Review</h4>
                            <div class="media mb-4">
                                <div class="media-body">
                                    <h6>Yesim Gurbuzer<small> - <i>May 28, 2024</i></small></h6>
                                    <div class="text-primary mb-2">
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star-half-alt"></i>
                                        <i class="far fa-star"></i>
                                    </div>
                                    <p>Browsing the restaurant's website was a great pleasure. The site is extremely stylish and easy to use. The photos and detailed descriptions of each dish on the menu make it easy to choose and whet your appetite. The dish I tried recently was simply amazing. The presentation was fantastic, and the colors and arrangement were incredibly appetizing. You can immediately sense the freshness and quality of the ingredients with the first bite. You must try this flavor.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h4 class="mb-4">Leave a Comment</h4>
                            <div class="d-flex my-3">
                                <p class="mb-0 mr-2">Your Rating:</p>
                                <div class="text-danger">
                                    <i class="far fa-star"></i>
                                    <i class="far fa-star"></i>
                                    <i class="far fa-star"></i>
                                    <i class="far fa-star"></i>
                                    <i class="far fa-star"></i>
                                </div>
                            </div>
                            <form>
                                <div class="form-group">
                                    @using (Html.BeginForm())
                                    {
                                        @Html.TextArea("Comment", "Your comment...", 5, 30, new
                                    { @style = "color:#6F6F6F;font-style:bold;" })
                                    }
                                </div>
                                <div class="form-group">
                                    <label for="name">Your Name</label>
                                    <input type="text" class="form-control" id="name">
                                </div>
                                <div class="form-group">
                                    <label for="email">Your Email</label>
                                    <input type="email" class="form-control" id="email">
                                </div>
                                <div class="form-group mb-0">
                                    <input type="submit" value="Submit Review" class="btn btn-primary px-3">
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Shop Detail End -->
<!-- Products Start -->
<!-- Products End -->
